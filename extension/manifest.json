{
  "manifest_version": 3,
  "name": "Amazon Groceries â€” Recipe to Pantry",
  "version": "1.0.0",
  "description": "Scrape recipe ingredients, compare against your pantry, and link to Whole Foods.",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["http://localhost:8000/*"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.allrecipes.com/*",
        "*://*.foodnetwork.com/*",
        "*://*.nytimes.com/*/recipes/*",
        "*://cooking.nytimes.com/*",
        "*://*.epicurious.com/*",
        "*://*.bonappetit.com/*",
        "*://*.seriouseats.com/*",
        "*://*.simplyrecipes.com/*",
        "*://*.delish.com/*",
        "*://*.tasty.co/*"
      ],
      "js": ["utils/recipe-extractors.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
